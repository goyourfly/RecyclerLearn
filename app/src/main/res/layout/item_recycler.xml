<?xml version="1.0" encoding="utf-8"?>
<com.goyourfly.recyclerlearn.MyCustomItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="80dp"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/ic_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to learn English" />

        <TextView
            android:id="@+id/text_content"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Lily , can you speak english" />
    </LinearLayout>

</com.goyourfly.recyclerlearn.MyCustomItemView>
